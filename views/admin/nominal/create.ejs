<%- include ../../partials/header.ejs %> <%- include
../../partials/preloader.ejs %> <%- include ../../partials/navbar.ejs %> <%-
include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- /.card-header -->
          <div class="card-body">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add Nominal Form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/nominal/create" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label>Coin Name</label>
                    <select
                      class="form-control select2"
                      style="width: 100%"
                      name="coinName"
                      required
                    >
                      <option selected="selected">Select Coin</option>
                      <option>UC</option>
                      <option>Gold</option>
                      <option>Diamond</option>
                      <option>Jewel</option>
                      <option>Gems</option>
                      <option>Cash</option>
                      <option>Point</option>
                      <option>Money</option>
                      <option>Dolar ($)</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="coinQuantity">Number of Coins</label>
                    <input
                      type="number"
                      name="coinQuantity"
                      class="form-control"
                      id="coinQuantity"
                      placeholder="Enter number of coins"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="price">Price</label>
                    <input
                      type="number"
                      name="price"
                      class="form-control"
                      id="price"
                      placeholder="Enter price of coins"
                      required
                    />
                  </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.card-body -->
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
