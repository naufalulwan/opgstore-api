<%- include ../../partials/header.ejs %> <%- include
../../partials/preloader.ejs %> <%- include ../../partials/navbar.ejs %> <%-
include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment - <%= payment.type %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- /.card-header -->
          <div class="card-body">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Payment Form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="price">Type</label>
                    <input type="text" name="type" class="form-control" value="<%= payment.type %>" id="type" placeholder="Enter type of payment" required />
                  </div>
                  <div class="form-group">
                    <label>Bank</label>
                    <div class="select2-purple">
                      <select class="form-control select2" multiple="multiple" data-placeholder="Select Bank" style="width: 100%" name="banks" required>
                        <% banks.forEach(bank => { %>
                        <option value="<%= bank._id %>" <% payment.banks.forEach(paymentBank => { %> <% if(bank._id.toString() === paymentBank._id.toString()) { %> selected <% } %> <% }) %>>
                          <%= bank.name %> - <%= bank.nameBank %> - <%=
                          bank.accountNumber %>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.card-body -->
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>