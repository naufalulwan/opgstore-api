<%- include ../../partials/header.ejs %> <%- include
../../partials/preloader.ejs %> <%- include ../../partials/navbar.ejs %> <%-
include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher - <%= voucher.name %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- /.card-header -->
          <div class="card-body">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Voucher Form</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/voucher/edit/<%= voucher._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="card-body">
                  <div class="form-group">
                    <label for="name">Name of Games</label>
                    <input type="text" name="name" class="form-control" value="<%= voucher.name %>" id="name" placeholder="Enter name of games" required />
                  </div>
                  <div class="form-group">
                    <label>Category</label>
                    <select class="form-control select2" style="width: 100%" name="category" required>
                      <option selected="selected" disabled hidden value="">Select Category</option>
                      <% category.forEach(category => { %>
                      <option value="<%= category._id %>" <% if(category._id.toString() === voucher?.category?._id.toString()) { %> selected <% } %>>
                        <%= category.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>

                  <div class="form-group">
                    <label>Nominal</label>
                    <div class="select2-purple">
                      <select class="form-control select2" multiple="multiple" data-placeholder="Select Nominal" style="width: 100%" name="nominals" required>
                        <% nominal.forEach(nominal => { %>
                        <option value="<%= nominal._id %>" <% voucher.nominals.forEach(voucherNominal => { %> <% if(nominal._id.toString() === voucherNominal._id.toString()) { %> selected <% } %> <% }) %>>
                          <%= nominal.coinQuantity %> <%= nominal.coinName %>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>

                  <div id="img-container" class="form-group" style="margin-bottom: -20px;">
                    <label for="image">Image</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <input type="file" id="image" name="image" class="custom-file-input" />
                        <label class="custom-file-label" for="image"><% if(voucher.thumbnail) { %><%= voucher.thumbnail %> <% } else { %>Choose file <% } %></label>
                      </div>
                    </div>
                    <br />
                    <img src="http://localhost:3000/uploads/<%= voucher.thumbnail %>" id="preview" alt="" width="25%" height="25%" />
                  </div>

                  <!-- /.card-body -->
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
              </form>
            </div>
          </div>
          <!-- /.card-body -->
        </div>

        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<!-- bs-custom-file-input -->
<script src="/adminlte/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script>
  $(function() {
    bsCustomFileInput.init();
  });



  function readURL(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function(e) {
        $("#preview").attr("src", e.target.result);
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  const thumbnail = "<%= voucher.thumbnail %>"

  if (thumbnail) {
    $("#img-container").css({
      "margin-bottom": "20px"
    })
  }

  $("#image").change(function() {
    $("#img-container").css({
      "margin-bottom": "20px"
    })
    readURL(this);
  });
</script>